<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Converter - UConvertO"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal">

        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="75dp">

        </View>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/area"
            android:text="AREA"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_blue_light"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed"
            android:text="SPEED"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_purple"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature"
            android:text="TEMPERATURE"
            android:layout_gravity="center"
            android:backgroundTint="#FA625E"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini Project By: \n Rashmi Ramakantha Pai, 2KE18CS032 \nRohit Guru M, 2KE18CS033 \nPradeep Kumar, 2KE18CS027 \nSummaiya Dharwad, 2KE18CS048"
            >

        </TextView>

    </LinearLayout>


</LinearLayout>